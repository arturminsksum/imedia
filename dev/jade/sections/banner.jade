mixin banner(title,text,page,mod,img)
  - var mod = (typeof mod === 'undefined') ? 'default' : mod
  - var img = (typeof img === 'undefined') ? '' : 'background-image: url(images/'+img+'.jpg)'
  section(class=["banner", "banner_" + mod]) 
    .banner__img(style=img)
    .banner__info
      h1.banner__title= title
      .banner__text= text  
    +breadcrumb(page)